{
  "name": "topdoc",
  "description": "Generate usage guides for css",
  "version": "1.0.11",
  "main": "./lib/topdoc",
  "bin": {
    "topdoc": "./bin/index.js"
  },
  "scripts": {
    "prepublish": "npm run compile",
    "compile": "babel -d ./ ./src/",
    "test": "nyc ava",
    "coverage": "nyc npm test",
    "lint": "eslint .",
    "codecov": "nyc report -r lcovonly && codecov",
    "checkdocs": "atomdoc src",
    "validate": "npm run lint && npm run test && npm run checkdocs",
    "release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/topcoat/topdoc.git"
  },
  "keywords": [
    "css",
    "style",
    "documentation",
    "usage"
  ],
  "author": "Garth Braithwaite <garthdb@gmail.com> (http://garthdb.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/topcoat/topdoc/issues"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "include": [
      "bin/index.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "preferGlobal": "true",
  "dependencies": {
    "commander": "^2.9.0",
    "commander-rc-adapter": "^0.1.1",
    "config-attendant": "^0.1.0",
    "fs-extra": "^1.0.0",
    "glob": "^7.1.0",
    "mkdirp": "^0.5.1",
    "pkginfo": "^0.4.0",
    "postcss": "^5.2.4",
    "postcss-topdoc": "^0.0.2",
    "pug": "^2.0.0-beta6",
    "resolve": "^1.1.7",
    "topdoc-default-template": "^0.1.1"
  },
  "devDependencies": {
    "atomdoc-cli": "^1.0.3",
    "ava": "^0.16.0",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^2.0.1",
    "babel-preset-es2015": "^6.16.0",
    "babel-register": "^6.16.3",
    "codecov": "^1.0.1",
    "cz-customizable": "^4.0.0",
    "eslint": "^3.7.0",
    "eslint-config-garthdb": "^0.1.0",
    "nixt": "^0.5.0",
    "nyc": "^8.3.0",
    "randomstring": "^1.1.5",
    "semantic-release": "^4.3.5",
    "topdoc-theme": "^0.7.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
